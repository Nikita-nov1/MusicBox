<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <nav class="navbar navbar-light bg-light">

        <div class="container">

            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="/docs/4.5/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
                MusicBox
            </a>

            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link " href="@Url.Action("Index","Artist")">Artists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Album")">Albums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Track")">Tracks</a>
                </li>
                
            </ul>
        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MusicBox application</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>