@using MusicBox.Areas.Admin.Models.Artists

@model EditArtistsViewModel
@{
    ViewBag.Title = "Edit";
}


<h2>Edit artist @Model.Title</h2>


@using (Html.BeginForm("Edit", "Artist", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "Artist title", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Image, "Artist image (max - 10 kb)", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        <div class="col-md-10">
            <img src=@Url.Action("RenderImage", new { id = Model.Id }) alt='' height=100 width=100 />   @* todo добавить mergen (оступ от картинки)*@

        </div>
        <div class="col-md-10">

            <input id="Image" name="Image" type="file" accept="image/*">
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Artists", "Index")
</div>

@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
