@using MusicBox.Areas.Admin.Models.Artists
@model DeleteArtistsViewModel

@{
    ViewBag.Title = "Delete artist";
}

<h2>Delete artist @Model.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="col-md-10 mb-3">
        <img src=@Url.Action("RenderImage", new { id = Model.Id }) alt='' height=150 width=150 />   @* todo добавить mergen (оступ от картинки)*@

    </div>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to Artists", "Index")
        </div>
    }
</div>