@using MusicBox.Areas.Admin.Models.Albums
@model DetailsAlbumsViewModel

@{
    ViewBag.Title = "Album details";
}

<h2> Album details: @Model.Artist.Title - "@Model.Title"</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <div class="col-md-10">
            <img src=@Url.Action("RenderImage", new { id = Model.Id }) alt='' height=150 width=150 />   @* todo добавить mergen (оступ от картинки)*@
        </div>

        <dt>
            @Html.LabelFor(model => model.Title, "Album title")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Artist.Title, "Album artist")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artist.Title)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Year, "Album year")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            @Html.LabelFor(model => model.DateOfCreation, "Album date of creation")
        </dt>

        <dd>
            @Model.DateOfCreation.ToString("d")
        </dd>

    </dl>

</div>

@{
    Html.RenderPartial("PartialForDetails", Model.Tracks);
}

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Albums", "Index")
</p>
