@using MusicBox.Areas.Admin.Models.Tracks
@model CreateTracksViewModel

@{
    ViewBag.Title = "Create track";
}

<link href="~/Content/jquery-ui.css" rel="stylesheet"  type="text/css"/>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>

<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>


<script type="text/javascript">      // todoN  поместить в jsFile , назвать метод и в него передать парраметр(url запроса, url create album ,url create artist)

        $(function () {

            $("#Artist").on("blur", function () { 
                let artistTitle = $("#Artist").val();
     
                if (artistTitle == "") {
                    $("#AlbumId option:gt(0)").remove();
                    $('#AlbumId').prop('disabled', true);
                    $("#Link").empty();

                }
                else {
                    $.ajax({
                        method: "POST",
                        url: "/Admin/Album/GetAlbumsForArtist",
                        data: { artist: artistTitle }
                    })
                        .done(function (albums) {
                            if (albums.Item2) {
                                if (albums.Item1.length == 0) {

                                    ShowLinkForCreationAlbum();
                                }
                                else {
                                    AddDropdownListForAlbum(albums);
                                }
                            }
                            else {
                                ShowLinkForCreationArtist();
                            }
                            
                        });
                }
            });

           
        });

    function AddDropdownListForAlbum(albums) {
        $("#AlbumId option:gt(0)").remove();
        for (var i = 0; i < albums.Item1.length; i++) {
            $('#AlbumId').append('<option value=' + albums.Item1[i].Id + '>' + albums.Item1[i].Title + '</option>');
        }
        $('#AlbumId').prop('disabled', false);
        $("#Link").empty();

    };

    function ShowLinkForCreationArtist() {
        $("#Link").empty();
        $("#Link").append('<p> <font color="red"> This artist does not exist. </font > </p>') 
            .append('Create <a href="/Admin/Artist/Create">artist</a>');
        $("#AlbumId option:gt(0)").remove();
        $('#AlbumId').prop('disabled', true);
       
    };

    function ShowLinkForCreationAlbum() {
        $("#Link").empty();
        $("#Link").append('<p> <font color="red"> This artist has no albums. </font > </p>')
            .append('Create <a href="/Admin/Album/Create">album</a>');
        $("#AlbumId option:gt(0)").remove();
        $('#AlbumId').prop('disabled', true);

        };

    </script>


