<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MusicBox</title>
    @Styles.Render(" ~/Content/jquery-ui")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



    <style>
        .border-col {
            border-right: 1px solid rgb(182, 182, 211);
        }

        .footer {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            height: 50px;
        }

        div.fixed {
            position: fixed;
            bottom: 2px;
            left: 0;
            right: 0;
            width: 70%;
        }
    </style>


</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/Files/Images/Icons/MusicBoxIcon.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
                MusicBox
            </a>

            <form class="form-inline" action="/action_page.php">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-info" type="submit">Search</button>
            </form>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto mr-5">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Главное</a>
                    </li>
                </ul>
            </div>

            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Hello " + User.Identity.Name, "Index", "Home")
                    </li>
                    <li class="ml-2">@Html.ActionLink("Logout", "Logout", "Account")</li>

                }
                else
                {
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                }
            </ul>

        </div>
    </nav>


    <div class="container ">

        <div class="row mh-100" @*style="height:400px"*@>

            <div class="col-lg-8  border-col">

                <div class="row mt-3">

                    <div class="col-lg-12">
                        <div class="ml-3"><h3>Главное</h3></div>
                    </div>

                </div>

                <div class="row">
                    <div class="mt-2">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active disabled" href="#">Всё</a> @*пока не активна(на ней находятся все вкладки)*@
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("Index","Album")">Альбомы</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","Artist")">Артисты</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="#">Чарт</a>
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>

            </div>

            <div class="col-lg-4 border-col pl-2">

                @RenderSection("tracks", required: false)
            </div>


        </div>

        <div class="row mb-1">
            <div class="col-lg-12 border-col">

                <hr />
                <footer class="blockquote-footer">
                    @*/// протестить*@
                    <p>&copy; @DateTime.Now.Year - MusicBox</p>
                </footer>
            </div>

        </div>
    </div>


    <div class="row">
        <div class="fixed mx-auto">
            <div id="player">
                <audio controls="controls" style="width:100%">
                    <source src="" type="" />
                </audio>
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)


</body>
</html>
